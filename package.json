{
  "name": "nestjs-sample-app",
  "version": "1.0.0",
  "description": "Sample NestJS backend application for demos",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "scottishwidow",
    "email": "mike.voznyanskix@gmail.com"
  },
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint --fix \"{src,test}/**/*.ts\"",
    "lint:ci": "eslint --max-warnings 0 \"{src,test}/**/*.ts\"",
    "format": "prettier --write \"{src,test}/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"{src,test}/**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@nestjs/testing": "^10.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}
